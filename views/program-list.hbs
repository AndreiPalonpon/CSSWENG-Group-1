        <!-- HEADER -->
        <div class="bg-half-gradient">
            <header class="bg-gradient">
                <div class="container d-flex align-items-center">
                    <div class="menu-icon mr-3" id="menu-toggle">&#9776;</div>
                    <a href="../views/dashboard.html">
                        <img src="../images/LPPWDFI-Logo.png" alt="Logo" class="logo mr-3">
                    </a>
                    <div>
                        <h1 class="org-name">Programs</h1>
                    </div>
                </div>

                <div class="addProgramBtn">
                    <button>Create</button>
                </div>
            </header>
        </div>

        <!--MODAL FORM-->
        <div class="dark_bg"></div>
        <div class="popup">
            <header>
                <h2 class="modalTitle">Fill the Form</h2>
                <span class="closeBtn">&times;</span>
            </header>
            <form action="">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="firstName">Program Name</label>
                        <input type="text" class="form-control" id="programName" placeholder="Program Name" required>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="programType">Type of Program</label>
                        <select id="programType" class="form-control" required>
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="frequency">Frequency</label>
                        <select id="frequency" class="form-control" required>
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="assistanceType">Assistance Type</label>
                        <select id="assistanceType" class="form-control" required>
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                </div>
                <input type="submit" class="submitBtn" value="Submit">
            </form>
        </div>

        <!--2nd Header-->
        <main class="main-content">
            <h2 class="main-title">Program Lists</h2>
            <div class="button-group">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="filterDropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Filter
                </button>
                <ul class="dropdown-menu" aria-labelledby="filterDropdownButton">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                    <li><a class="dropdown-item" href="#">Program Name</a></li>
                    <li><a class="dropdown-item" href="#">Date Last Updated</a></li>
                    <li><a class="dropdown-item" href="#">Date Program Created</a></li>
                    <li><a class="dropdown-item" href="#">Type of Program</a></li>
                    <li><a class="dropdown-item" href="#">Frequency</a></li>
                    <li><a class="dropdown-item" href="#">Assistance Type</a></li>
                </ul>
                <div id="dynamicFiltersContainer"></div>
                <button class="btn export-btn">Export</button>
            </div>

            <!---TABLE LISTS-->
            <div class="table-container">
                <table class="table table-bordered table-hover">
                    <caption>List of Programs</caption>
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Program Name</th>
                            <th scope="col">Last Updated</th>
                            <th scope="col">Date Program Created</th>
                            <th scope="col">Type of Program</th>
                            <th scope="col">Frequency</th>
                            <th scope="col">Assistance Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td><a href="">Program 1</a></td>
                            <td>01-10-2024</td>
                            <td>01-10-2024</td>
                            <td>Assistance</td>
                            <td>Monthly</td>
                            <td>Medical</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td><a href="">Program 2</a></td>
                            <td>01-10-2024</td>
                            <td>01-10-2024</td>
                            <td>Service</td>
                            <td>Yearly</td>
                            <td>Financial</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td><a href="">Program 3</a></td>
                            <td>01-10-2024</td>
                            <td>01-10-2024</td>
                            <td>Initiative</td>
                            <td>Quarterly</td>
                            <td>Educational</td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td><a href="">Program 4</a></td>
                            <td>01-10-2024</td>
                            <td>01-10-2024</td>
                            <td>Program</td>
                            <td>3 Months</td>
                            <td>Medical</td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td><a href="">Program 5</td>
                            <td>01-10-2024</td>
                            <td>01-10-2024</td>
                            <td>Assistance</td>
                            <td>Semi-Annual</td>
                            <td>Financial</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>

        <nav aria-label="page-navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
