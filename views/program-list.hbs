                                <script>
                                    document.getElementById("menu-toggle").addEventListener("click", function() {
                                        document.getElementById("wrapper").classList.toggle("toggled");
                                        document.querySelector(".main-content").classList.toggle("toggled");
                                        document.querySelector(".header-right").classList.toggle("toggled");
                                    });

                                    $(document).ready(function() {
                                        $("#myInput").on("keyup", function() {
                                            var value = $(this).val().toLowerCase();
                                            $(".dropdown-menu li").filter(function() {
                                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                            });
                                        });
                                    });

                                    function createFilterDropdown(filterType) {
                                        const filterContainer = document.getElementById('dynamicFiltersContainer');

                                        // Remove existing filter dropdown if it exists
                                        const existingDropdown = document.getElementById('dynamicFilterDropdown');
                                        if (existingDropdown) {
                                            filterContainer.removeChild(existingDropdown);
                                        }

                                        // Create a new dropdown button
                                        const newDropdown = document.createElement('div');
                                        newDropdown.classList.add('btn-group');
                                        newDropdown.id = 'dynamicFilterDropdown';

                                        let dropdownContent = '';

                                        // Define the dropdown options based on the filter type
                                        switch (filterType) {
                                            case 'Program Name':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">A-Z</a>
                                                    <a class="dropdown-item" href="#">Z-A</a>
                                                `;
                                                break;
                                            case 'Date Last Updated':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">Earliest</a>
                                                    <a class="dropdown-item" href="#">Latest</a>
                                                `;
                                                break;
                                            case 'Date Program Created':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">Earliest</a>
                                                    <a class="dropdown-item" href="#">Latest</a>
                                                `;
                                                break;
                                            case 'Type of Program':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">Assistance</a>
                                                    <a class="dropdown-item" href="#">Initiative</a>
                                                    <a class="dropdown-item" href="#">Service</a>
                                                    <a class="dropdown-item" href="#">Program</a>
                                                `;
                                                break;
                                            case 'Frequency':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">Monthly</a>
                                                    <a class="dropdown-item" href="#">Quarterly</a>
                                                    <a class="dropdown-item" href="#">Yearly</a>
                                                    <a class="dropdown-item" href="#">Semi-Annual</a>
                                                    <a class="dropdown-item" href="#">3 Months</a>
                                                `;
                                                break;
                                            case 'Assistance Type':
                                                dropdownContent = `
                                                    <a class="dropdown-item" href="#">Medical</a>
                                                    <a class="dropdown-item" href="#">Financial</a>
                                                    <a class="dropdown-item" href="#">Educational</a>
                                                `;
                                                break;
                                            default:
                                                break;
                                        }

                                        newDropdown.innerHTML = `
                                            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                ${filterType}
                                            </button>
                                            <div class="dropdown-menu">
                                                ${dropdownContent}
                                            </div>
                                        `;

                                        filterContainer.appendChild(newDropdown);
                                    }
                                </script>
                                </script>
