<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LPPWDFI | Beneficiaries List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/program-list-style.css">
</head>

<body>
    <div id="wrapper">
        <div class="overlay dark_bg"></div>
        <!-- Modal Background -->

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <div class="sidebar-header">
                    <div class="sidebar-brand">
                        <a href="#">Admin</a>
                        <hr class="navbar-solid">
                    </div>
                </div>

                <li><a href="../views/dashboard.html">Dashboard</a></li>
                <li><a href="../views/program-list.html">Programs</a></li>
                <li><a href="#beneficiary">Beneficiary</a></li>
                <li><a href="#benefactor">Benefactor</a></li>
                <li><a href="#inventory">Inventory</a></li>
                <li><a href="#settings">Settings</a></li>
                <li class="logout-link"><a href="#logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->

        <!-- HEADER -->
        <div class="bg-half-gradient">
            <header class="bg-gradient">
                <div class="container d-flex align-items-center">
                    <div class="menu-icon mr-3" id="menu-toggle">&#9776;</div>
                    <a href="../views/dashboard.html">
                        <img src="../images/LPPWDFI-Logo.png" alt="Logo" class="logo mr-3">
                    </a>
                    <div>
                        <h1 class="org-name">Beneficiary</h1>
                    </div>
                </div>

                <div class="addProgramBtn">
                    <button>Create</button>
                </div>
            </header>
        </div>

        <!--MODAL FORM-->
        <div class="popup">
            <header>
                <h2 class="modalTitle">Fill the Form</h2>
                <span class="closeBtn">&times;</span>
            </header>
            <form id="programForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="dob">Date of Birth</label>
                        <input type="date" class="form-control" id="dob" placeholder="Date of Birth" required>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="gender">Gender</label>
                        <select id="gender" class="form-control" required>
                            <option value="" selected disabled>Choose...</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="contactNo">Contact Number</label>
                        <input type="tel" class="form-control" id="contactNo" placeholder="+63 912 345 6789" required>
                    </div>


                    <div class="form-group col-md-6">
                        <label for="barangay">Barangay</label>
                        <select id="barangay" class="form-control" required>
                            <option value="" selected disabled>Choose...</option>
                        </select>
                    </div>


                    <div class="form-group col-md-6">
                        <label for="disabilityType">Disability Type</label>
                        <select id="disabilityType" class="form-control" required>
                            <option value="" selected disabled>Choose...</option>
                            <option value="physical">Physical</option>
                            <option value="sensory">Sensory</option>
                            <option value="intellectual">Intellectual</option>
                            <option value="mental">Mental</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="comorbidities">Comorbidities</label>
                        <select id="comorbidities" class="form-control" required>
                            <option value="" selected disabled>Choose...</option>
                            <option value="none">None</option>
                            <option value="diabetes">Diabetes</option>
                            <option value="hypertension">Hypertension</option>
                            <option value="heart disease">Heart Disease</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="pwdIdCardNo">PWD Card ID No.</label>
                        <input type="text" class="form-control" id="pwdIdCardNo" placeholder="PWD Card ID No." required>
                    </div>
                </div>
                <input type="submit" class="submitBeneficiaryBtn" value="Submit">
            </form>
        </div>

        <!--2nd Header-->
        <main class="main-content">
            <h2 class="main-title">Beneficiary List</h2>
            <div class="button-group">
                <button class="btn export-btn" onclick="exportTableToCSV('Beneficiaries.csv')">Export to CSV</button>
            </div>

            <!---TABLE LISTS-->
            <div class="table-container">
                <button id="resetFiltersButton" class="btn btn-secondary">Reset Filters</button>
                <table class="table table-bordered table-hover">
                    <caption>List of Beneficiaries</caption>
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <!-- Dropdown for sorting by first name -->
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="firstNameDropdown" data-bs-toggle="dropdown" aria-expanded="false">First Name</a>
                                    <ul class="dropdown-menu" aria-labelledby="firstNameDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="nameSort" value="az" data-criterion="firstName" id="firstNameSortAZ">
                                                <label class="form-check-label" for="firstNameSortAZ">A-Z</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="nameSort" value="za" data-criterion="firstName" id="firstNameSortZA">
                                                <label class="form-check-label" for="firstNameSortZA">Z-A</label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>

                            <!-- Dropdown for sorting by last name -->
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="lastNameDropdown" data-bs-toggle="dropdown" aria-expanded="false">Last Name</a>
                                    <ul class="dropdown-menu" aria-labelledby="lastNameDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="nameSort" value="az" data-criterion="lastName" id="lastNameSortAZ">
                                                <label class="form-check-label" for="lastNameSortAZ">A-Z</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="nameSort" value="za" data-criterion="lastName" id="lastNameSortZA">
                                                <label class="form-check-label" for="lastNameSortZA">Z-A</label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>

                            <!-- Dropdown for sorting by Date of Birth -->
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="dobDropdown" data-bs-toggle="dropdown" aria-expanded="false">DOB</a>
                                    <ul class="dropdown-menu" aria-labelledby="dobDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="dobSort" value="asc" id="dobSortAsc">
                                                <label class="form-check-label" for="dobSortAsc">Ascending</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="dobSort" value="desc" id="dobSortDesc">
                                                <label class="form-check-label" for="dobSortDesc">Descending</label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>

                            <!-- Dropdown for filtering by Gender -->
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="genderDropdown" data-bs-toggle="dropdown" aria-expanded="false">Gender</a>
                                    <ul class="dropdown-menu" aria-labelledby="genderDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="genderFilter" value="all" id="genderAll" checked>
                                                <label class="form-check-label" for="genderAll">All</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="genderFilter" value="male" id="genderMale">
                                                <label class="form-check-label" for="genderMale">Male</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="genderFilter" value="female" id="genderFemale">
                                                <label class="form-check-label" for="genderFemale">Female</label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>

                            <th scope="col">Contact No.</th>

                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="barangayDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Barangay
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="barangayDropdown" id="barangayDropdownMenu"></ul>
                                </div>
                            </th>

                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="assistanceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Disability Type
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="assistanceDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="financial" id="financialCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="financialCheck">
                                                    Financial
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="medical" id="medicalCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="medicalCheck">
                                                    Medical
                                                </label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="assistanceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Comorbidities
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="assistanceDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="financial" id="financialCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="financialCheck">
                                                    Financial
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="medical" id="medicalCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="medicalCheck">
                                                    Medical
                                                </label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="assistanceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        PWD ID Card No.
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="assistanceDropdown">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="financial" id="financialCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="financialCheck">
                                                    Financial
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="medical" id="medicalCheck" name="assistanceFilter">
                                                <label class="form-check-label" for="medicalCheck">
                                                    Medical
                                                </label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="programInfo">
                        <!-- Program rows will be populated here -->
                        {{#each programs}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td><a href="">{{this.name}}</a></td>
                            <td>{{this.recent_update_date}}</td>
                            <td>{{this.creation_date}}</td>
                            <td>{{this.program_type}}</td>
                            <td>{{this.frequency}}</td>
                            <td>{{this.assistance_type}}</td>
                        </tr>
                        {{/each}}
